{
  "permissions": {
    "allow": [
      "Skill(plugin-dev:skill-development)",
      "Skill(plugin-dev:plugin-structure)",
      "Skill(mermaid-diagrams:mermaid)",
      "Skill(mermaid-diagrams-guide:mermaid)",
      "Skill(mermaid-usage-in-markdown:mermaid-in-markdown)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "WebSearch",
      "Bash(git push:*)"
    ]
  },
  "extraKnownMarketplaces": {
    "ddd-marketplace": {
      "source": {
        "source": "directory",
        "path": "./"
      }
    }
  },
  "statusLine": {
    "type": "command",
    "command": "powershell -NoProfile -Command \"$branch = git branch --show-current 2>$null; if (!$branch) { $branch = 'no-git' }; $dir = Split-Path (Get-Location) -Leaf; Write-Output \\\"$branch | $dir\\\"\"",
    "padding": 1
  }
}
